<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanco"
    tools:context=".ConsultarMascota">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_marginBottom="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:touchscreenBlocksFocus="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="104dp"
                    android:id="@+id/imageCM"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="10"
                    app:civ_shadow_color="#000000"
                    app:civ_border="true"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#989898"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/butImagenCM"
                    android:layout_gravity="bottom"
                    android:background="@android:drawable/ic_menu_camera" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginLeft="35dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTNombreCM"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:textColor="@color/Negro"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de animal:"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginLeft="35dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTTipoCM"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textColor="@color/Negro"
                    android:hint="Tipo de animal"
                    android:layout_marginTop="15dp"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de nacimiento:"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginLeft="35dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextFechaNCM"
                    android:hint="Fecha de nacimiento"
                    android:layout_marginTop="15dp"
                    android:inputType="date"
                    android:textColor="@color/Negro"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_weight="0.42" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de chip:"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginLeft="35dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Número de chip"
                    android:inputType="text"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:textSize="17sp"
                    android:textColor="@color/Negro"
                    android:padding="5dp"
                    android:id="@+id/editTNumChipCM"
                    android:layout_alignBottom="@+id/textVNumneroC"
                    android:layout_toEndOf="@+id/textVNumneroC" />
            </LinearLayout>

            <View style="@style/Divisor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="35dp"
                android:text="Cuidados adicionales de la mascota:"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicación:"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginLeft="35dp"/>

                <EditText
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Medicación"
                    android:inputType="text"
                    android:textColor="@color/Negro"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:ems="10"
                    android:id="@+id/editTMedicacionCM" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alergia:"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginLeft="35dp"/>

                <EditText
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Alergía"
                    android:inputType="text"
                    android:textColor="@color/Negro"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:id="@+id/editTAlergiaCM" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/butGuardarModCM"
                android:textColor="@color/Blanco"
                android:id="@+id/butGuardarModCM"
                android:layout_marginTop="30dp"
                android:onClick="updateMascota()"
                android:textAllCaps="false"
                android:background="@drawable/btn_style"
                android:layout_gravity="center_horizontal" />

            <View style="@style/Divisor"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="35dp"
                    android:textSize="17sp"
                    android:text="Citas de la mascota:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="35dp"
                    android:textSize="17sp"
                    android:layout_marginBottom="5dp"
                    android:text="(se puede eliminar cualquier cita)"/>

            </LinearLayout>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/listViewAgendaCM"
                android:divider="@android:color/transparent"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>